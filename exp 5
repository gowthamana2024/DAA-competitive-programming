#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int arr[n];
    for(int i=0; i<n; i++) scanf("%d", &arr[i]);
    int k;
    scanf("%d", &k);

    int i = 0, j = 1;
    while(i < n && j < n) {
        if(i == j) { j++; continue; }
        int diff = arr[j] - arr[i];
        if(diff == k) {
            printf("1");
            return 0;
        } else if(diff < k) {
            j++;
        } else {
            i++;
        }
    }
    printf("0");
    return 0;
}
